<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip" 
    android:orientation="horizontal">
    
    
    <ImageView  
       android:id="@+id/imgv_goods_photo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" 
       android:layout_weight="3"
       android:src="@drawable/xiez"
       android:contentDescription="@null"
       
       />
    
    
	    <LinearLayout 
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content" 
	        android:layout_weight="8"
	         android:layout_marginLeft="4dip"
	         android:orientation="vertical"
	       >
        
        
        <TextView 
           android:id="@+id/txt_goods_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:singleLine="true"
           style="@style/main_list_goods_title_font"
           android:text="@string/goods_title"  />
        
        
        <TextView 
           android:id="@+id/txt_goods_desc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:maxLines="3"
           android:ellipsize="end"
           style="@style/main_list_goods_desc_font"
           android:text="@string/goods_desc"  />
        
    </LinearLayout>
    
	  
	    <ImageView  
	        android:id="@+id/img_arrow"
	       android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_weight="1"
           android:background="@drawable/arrow"
           android:contentDescription="@null"/>
	     
	    
	   

</LinearLayout>